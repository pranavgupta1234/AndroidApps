<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.root.hasher.MainActivity"
    android:background="#6d78ca"
    android:onClick="onButtonClick"
    android:clickable="true">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Click Button To Get The Required Result"
        android:id="@+id/add"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:focusable="true"
        android:layout_above="@+id/ans"
        android:background="#c2f6f0" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD"
        android:id="@+id/BAdd"
        android:background="#cdc119"
        android:onClick="onButtonClick"
        android:layout_alignTop="@+id/kuch"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/kuch"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/BAdd" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/res"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/res"
        android:layout_alignStart="@+id/res" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/ans"
        android:layout_marginTop="27dp"
        android:hint="Result"
        android:layout_below="@+id/res" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/number1"
        android:layout_below="@+id/ans"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:hint="Enter first number"
        android:background="#f3fad5" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/number2"
        android:hint="Enter second number"
        android:background="#f4f6fb"
        android:layout_above="@+id/kuch"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUB"
        android:id="@+id/BSub"
        android:background="#13c213"
        android:layout_alignTop="@+id/BAdd"
        android:layout_alignEnd="@+id/number2"
        android:onClick="onButtonClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MUL"
        android:id="@+id/BMul"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/BAdd"
        android:layout_toEndOf="@+id/kuch"
        android:background="#f0270c"
        android:onClick="onButtonClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DIV"
        android:id="@+id/BDiv"
        android:background="#e715d9"
        android:onClick="onButtonClick"
        android:layout_alignTop="@+id/BMul"
        android:layout_alignStart="@+id/BSub" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/button1"
        android:background="#ec12e9"
        android:layout_alignBaseline="@+id/button"
        android:layout_alignBottom="@+id/button"
        android:layout_toEndOf="@+id/BMul" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SignUp"
        android:id="@+id/button"
        android:background="#cab920"
        android:layout_below="@+id/BDiv"
        android:layout_toStartOf="@+id/BDiv"
        android:layout_marginTop="28dp"
        android:height="20dp"
        android:clickable="true" />
</RelativeLayout>
